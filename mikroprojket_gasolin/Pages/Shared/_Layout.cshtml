<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Ragnarock</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link href="~/css/navbar.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/mikroprojket_gasolin.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar-container">
            <!-- Hamburger Icon and Logo -->
            <div class="header-top">
                <div class="hamburger" id="hamburger">
                    ☰
                </div>
                <img src="/img/logo.png" alt="Ragnarock Logo" class="navbar-logo">
            </div>
            <!-- Sliding Navbar -->
            <div class="vertical-navbar" id="navbar">
                <ul>
                    <li>Forside</li>
                    <li class="expandable" id="bandmedlemmer">
                        Bandmedlemmer <span class="arrow">▶</span>
                        <ul class="sub-navbar">
                            <li>Medlem 1</li>
                            <li>Medlem 2</li>
                            <li>Medlem 3</li>
                            <li>Medlem 4</li>
                            <li>Medlem 5</li>
                        </ul>
                    </li>
                    <li>Bandets Historie</li>
                    <li>Memorabilia</li>
                </ul>
            </div>
            <div class="overlay" id="overlay"></div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - mikroprojket_gasolin - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>